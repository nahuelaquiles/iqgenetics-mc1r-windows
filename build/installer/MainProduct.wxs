<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package InstallerVersion="500" Compressed="yes" />

  <MajorUpgrade DowngradeErrorMessage="A newer version of IQGenetics MC1R is already installed." />
  <MediaTemplate />

  <Fragment>
    <Directory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="IQGenetics MC1R" />
    </Directory>
    <Directory Id="ProgramMenuFolder">
      <Directory Id="StartMenuFolder" Name="IQGenetics MC1R" />
    </Directory>
  </Fragment>

  <Fragment>
    <Component Id="StartMenuShortcut" Directory="StartMenuFolder" Guid="D5774AA1-F836-4BF6-9205-DF4CF77D6751">
      <Shortcut Id="ApplicationStartMenuShortcut"
                Name="IQGenetics MC1R"
                Target="[INSTALLFOLDER]IQGenetics.MC1R.App.exe"
                WorkingDirectory="INSTALLFOLDER" />
      <RemoveFolder Id="RemoveStartMenuDir" On="uninstall" />
      <RegistryValue Root="HKCU"
                     Key="Software\\IQGenetics\\IQGenetics MC1R"
                     Name="Installed"
                     Type="integer"
                     Value="1"
                     KeyPath="yes" />
    </Component>
  </Fragment>

  <Fragment>
    <Feature Id="MainFeature" Title="IQGenetics MC1R" Level="1">
      <ComponentGroupRef Id="PublishedFiles" />
      <ComponentRef Id="StartMenuShortcut" />
    </Feature>
  </Fragment>
</Wix>
