<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <!-- Define product details via WiX variables or the .wixproj -->
  <Package InstallerVersion="500"
           InstallScope="perMachine"
           Compressed="yes"
           Description="IQ Genetics MC1R Sanger Automation" />

  <MajorUpgrade DowngradeErrorMessage="A newer version is already installed." />

  <MediaTemplate EmbedCab="yes" />

  <!-- Define installation directories -->
  <StandardDirectory Id="ProgramFilesFolder">
    <Directory Id="INSTALLFOLDER" Name="IQ Genetics MC1R">
      <!-- Files harvested into this folder -->
    </Directory>
  </StandardDirectory>

  <!-- Main feature referencing harvested files -->
  <Feature Id="MainFeature" Title="IQ Genetics MC1R" Level="1">
    <ComponentGroupRef Id="PublishedFiles" />
  </Feature>

  <!-- Create Start Menu shortcut -->
  <StandardDirectory Id="ProgramMenuFolder">
    <Directory Id="ProgramMenuDir" Name="IQ Genetics">
      <Component Id="StartMenuShortcuts" Guid="965E93E2-DF8F-45D5-8A72-6B1DF6F20EA0">
        <Shortcut Id="AppShortcut"
                  Name="IQ Genetics MC1R"
                  Target="[INSTALLFOLDER]IQGenetics.MC1R.App.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="RemoveProgramMenuDir" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\\IQGenetics\\MC1R"
                       Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </Directory>
  </StandardDirectory>

</Wix>
