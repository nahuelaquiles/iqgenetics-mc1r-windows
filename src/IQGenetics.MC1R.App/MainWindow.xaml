<Window x:Class="IQGenetics.MC1R.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IQGenetics.MC1R.App"
        xmlns:vm="clr-namespace:IQGenetics.MC1R.App.ViewModels"
        mc:Ignorable="d"
        Title="IQ Genetics — MC1R (E-locus) Sanger Automation" Height="720" Width="1180"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,10">
            <TextBlock FontSize="22" FontWeight="SemiBold" Text="IQ Genetics — MC1R (E-locus) Sanger Automation" />
            <TextBlock DockPanel.Dock="Right" Foreground="#666" VerticalAlignment="Bottom" Text="{Binding VersionString}" />
        </DockPanel>

        <!-- Inputs -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="10">
                <StackPanel>
                    <TextBlock FontWeight="SemiBold" Text="Reference"/>
                    <DockPanel>
                        <TextBox Text="{Binding ReferencePath}" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        <Button Content="Select..." Command="{Binding SelectReferenceCommand}" />
                    </DockPanel>

                    <TextBlock FontWeight="SemiBold" Margin="0,8,0,0" Text="Analysis files (.ab1)"/>
                    <DockPanel>
                        <Button Content="Add Files..." Command="{Binding AddFilesCommand}" />
                        <Button Content="Clear" Command="{Binding ClearFilesCommand}" />
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#555" Text="{Binding FileCountLabel}" />
                    </DockPanel>
                    <ListBox ItemsSource="{Binding InputFiles}" Height="110" BorderBrush="#CCC" />
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Top">
                <Button Content="Run Analysis" Command="{Binding RunAnalysisCommand}" IsEnabled="{Binding CanRun}" />
                <Button Content="Export CSV" Command="{Binding ExportCsvCommand}" IsEnabled="{Binding CanExport}" />
                <Button Content="Export PDF (soon)" IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Results -->
        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBlock FontWeight="SemiBold" Text="Results"/>
                    <TextBlock Margin="10,0,0,0" Foreground="#666" Text="{Binding StatusText}"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding Results}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10,0,0" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sample" Binding="{Binding SampleName}" Width="200"/>
                        <DataGridTextColumn Header="Dirty?" Binding="{Binding DirtyFlag}" Width="90"/>
                        <DataGridTextColumn Header="Reason" Binding="{Binding DirtyReason}" Width="240"/>
                        <DataGridTextColumn Header="c.274" Binding="{Binding Genotype274}" Width="90"/>
                        <DataGridTextColumn Header="E status" Binding="{Binding EStatus}" Width="90"/>
                        <DataGridTextColumn Header="c.644" Binding="{Binding Genotype644}" Width="90"/>
                        <DataGridTextColumn Header="Suppression" Binding="{Binding SuppressionStatus}" Width="120"/>
                        <DataGridTextColumn Header="AlignScore" Binding="{Binding AlignmentScore}" Width="90"/>
                        <DataGridTextColumn Header="Orientation" Binding="{Binding Orientation}" Width="120"/>
                        <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ProgressBar Width="420" Height="18" Minimum="0" Maximum="100" Value="{Binding ProgressValue}" />
                <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#555" Text="{Binding ProgressLabel}" />
            </StackPanel>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="#888" Text="Offline • Windows • No Python required" />
        </Grid>

    </Grid>
</Window>
